<h1>Carrito de compras</h1>

<table>
  <tr>
    <th>Foto</th>
    <th>Producto</th>
    <th>Precio</th>
    <th>Cantidad</th>
    <th>Subtotal</th>
  </tr>

  <% session[:carrito].each do |item| %>
    <tr>
      <td><%= item.ver_foto %></td>
      <td><%= item.nombre %></td>
      <td><%= item.precio %></td>
      <td><%= item.cantidad %></td>
      <td><%= item.subtotal %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Seguir comprando", carrito_compras_path %>
<br />
<br />
<% form_for @compra do |f| -%>
  <%= f.submit "Comprar" %>
<% end -%>
