<h1>Listado de productos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Fotograf√≠a</th>
  </tr>

<% @productos.each do |producto| %>
  <tr>
    <td><%=h producto.nombre %></td>
    <td><%=h producto.precio %></td>
    <td><%= producto.ver_foto(:mini) %></td>
    <td><%= link_to 'Ver', producto %></td>
    <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
    <td><%= link_to 'Borrar', producto, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

